{
  "name": "material-cards",
  "version": "2.0.0",
  "description": "Material card component with vanilla JavaScript and local SVG icons",
  "keywords": [
    "cards",
    "material-design",
    "component",
    "scss",
    "vanilla-js"
  ],
  "license": "MIT",
  "homepage": "https://github.com/marlenesco/material-cards",
  "bugs": {
    "url": "https://github.com/marlenesco/material-cards/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/marlenesco/material-cards.git"
  },
  "author": {
    "name": "David Foliti",
    "url": "https://twitter.com/marlenesco"
  },
  "files": [
    "dist",
    "js",
    "scss",
    "assets",
    "README.md",
    "CHANGELOG.md",
    "MIGRATION.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "main": "js/material-cards.js",
  "types": "js/material-cards.d.ts",
  "exports": {
    ".": {
      "types": "./js/material-cards.d.ts",
      "import": "./js/material-cards.js",
      "require": "./js/material-cards.js",
      "default": "./js/material-cards.js"
    },
    "./css": "./dist/material-cards.css",
    "./css/auto-height": "./dist/material-cards-auto-height.css",
    "./icons": "./assets/icons.svg"
  },
  "scripts": {
    "build": "npm run build:css && npm run build:js",
    "build:css": "sass --no-source-map scss/material-cards.scss dist/material-cards.css && sass --no-source-map scss/material-cards-auto-height.scss dist/material-cards-auto-height.css",
    "build:js": "terser js/material-cards.js -c -m -o js/material-cards.min.js"
  },
  "devDependencies": {
    "sass": "^1.93.2",
    "terser": "^5.39.0"
  }
}
